<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C1A57">

    <!-- Tombol Close -->
    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="24dp"
        android:layout_height="30dp"
        android:src="@drawable/outline_close_24"
        android:padding="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <!-- Title -->
    <TextView
        android:id="@+id/textHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catat Transaksi"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Dropdown Kategori + Ikon -->
    <LinearLayout
        android:id="@+id/layoutKategori"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_spinner"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/textHeader"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp">

        <!-- Ikon kategori -->
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/decrease"
            android:layout_marginEnd="6dp"/>

        <Spinner
            android:id="@+id/spinnerKategori"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:popupTheme="@style/SpinnerPopupWhite"/>

        <!-- Ikon arrow dropdown -->
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/dropdown"/>
    </LinearLayout>

    <!-- Dropdown Tanggal + Ikon -->
    <LinearLayout
        android:id="@+id/layoutTanggal"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_spinner"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/textHeader"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp">

        <!-- Ikon kalender -->
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_calendar"
            android:layout_marginEnd="6dp"/>

        <Spinner
            android:id="@+id/spinnerTanggal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:popupTheme="@style/SpinnerPopupWhite"/>

        <!-- Ikon arrow -->
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/dropdown"/>
    </LinearLayout>

    <!-- Input Nominal -->
    <EditText
        android:id="@+id/textAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Rp 0"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textColorHint="#80FFFFFF"
        android:inputType="number"
        android:background="@android:color/transparent"
        android:padding="0dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/layoutKategori"
        app:layout_constraintBottom_toTopOf="@id/bottomCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"/>

    <!-- Bottom Card -->
    <FrameLayout
        android:id="@+id/bottomCard"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_buttom_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:gravity="top"
                android:hint="Tambahkan deskripsi..."
                android:padding="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonTambahLagi"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_outline"
                    android:text="Tambah Lagi"
                    android:textColor="#0C1A57"
                    android:textStyle="bold"/>

                <Space
                    android:layout_width="12dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/buttonSelesai"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_primary"
                    android:backgroundTint="@null"
                    android:text="Selesai"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:backgroundTint="@null" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
