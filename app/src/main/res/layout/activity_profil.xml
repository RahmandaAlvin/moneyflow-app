<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!-- HEADER MELENGKUNG -->
        <View
            android:id="@+id/headerBg"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/header_profile"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- JUDUL -->
        <TextView
            android:id="@+id/textHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil Pengguna"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/headerBg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp" />


        <!-- FOTO PROFIL (DIBESARKAN) -->


        <!-- NAMA -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardProfileImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="188dp"
            app:cardCornerRadius="75dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ikonprofile" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textNamaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/cardProfileImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp" />

        <EditText
            android:id="@+id/editNama"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_namaprofil"
            android:paddingStart="16dp"
            android:text="Rahmanda Alvin Saputra"
            android:textSize="16sp"
            android:textColor="#000000"
            android:focusable="false"
            app:layout_constraintTop_toBottomOf="@id/textNamaLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp" />


        <!-- EMAIL -->
        <TextView
            android:id="@+id/textEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/editNama"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="24dp" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_namaprofil"
            android:paddingStart="16dp"
            android:text="rahmanda@gmail.com"
            android:textSize="16sp"
            android:textColor="#000000"
            android:focusable="false"
            app:layout_constraintTop_toBottomOf="@id/textEmailLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp" />


        <!-- BUTTON LOGOUT -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:text="Logout"
            android:textSize="16sp"
            android:textColor="#0A1A56"
            android:background="@drawable/bg_logout_button"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            app:layout_constraintTop_toBottomOf="@id/editEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>