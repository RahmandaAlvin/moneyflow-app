<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:padding="0dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- BACKGROUND BIRU DENGAN ROUNDED BOTTOM -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_blue_rounded"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <!-- HEADER SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp">

                <TextView
                    android:id="@+id/textWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selamat Datang Aidilia"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="November 2025"
                    android:textColor="#E3F2FD"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- CARD SALDO UTAMA - DI ATAS BACKGROUND BIRU -->
            <LinearLayout
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/card_background"
                android:elevation="10dp"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- BARIS ATAS: Judul + Icon Mata -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Saldo Utama"
                        android:textColor="#666666"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iconMata"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_view"
                        app:tint="#666666" />

                </LinearLayout>

                <!-- SALDO -->
                <TextView
                    android:id="@+id/textSaldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Rp 45.000"
                    android:textColor="#333333"
                    android:textSize="32sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- PEMASUKAN & PENGELUARAN (SEJAJAR) -->
            <LinearLayout
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp">

                <!-- PEMASUKAN -->
                <LinearLayout
                    android:id="@+id/cardPemasukan"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_pemasukan"
                    android:padding="16dp"
                    android:elevation="6dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center_vertical">

                    <!-- BARIS ATAS: Icon + Text -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/increase"
                            app:tint="#FFFFFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pemasukan"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:layout_marginStart="6dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textPemasukan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 100.000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="12dp" />

                </LinearLayout>

                <!-- PENGELUARAN -->
                <LinearLayout
                    android:id="@+id/cardPengeluaran"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_pengeluaran"
                    android:padding="16dp"
                    android:elevation="6dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical">

                    <!-- BARIS ATAS: Icon + Text -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/decrease"
                            app:tint="#FFFFFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pengeluaran"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:layout_marginStart="6dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textPengeluaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 65.000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="12dp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout> <!-- END BACKGROUND BIRU SECTION -->

        <!-- TREN 7 HARI TERAKHIR -->
        <LinearLayout
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:elevation="4dp">

            <!-- JUDUL -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tren 7 Hari Terakhir"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <!-- CONTAINER GRAFIK + LABEL KIRI -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <!-- LABEL KIRI (5k, 2.5k, 0k, dll) -->
                <LinearLayout
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1"
                        android:text="5k" android:textSize="11sp" android:textColor="#666666" android:gravity="center"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1"
                        android:text="2.5k" android:textSize="11sp" android:textColor="#666666" android:gravity="center"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1"
                        android:text="0k" android:textSize="11sp" android:textColor="#666666" android:gravity="center"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1"
                        android:text="-2.5k" android:textSize="11sp" android:textColor="#666666" android:gravity="center"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1"
                        android:text="-5k" android:textSize="11sp" android:textColor="#666666" android:gravity="center"/>
                </LinearLayout>

                <!-- GRAFIK BARS -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:padding="10dp">

                    <!-- Garis horizontal tengah (axis 0) -->
                    <View android:layout_width="match_parent" android:layout_height="1dp"
                        android:background="#CCCCCC" android:layout_gravity="center_vertical"/>

                    <!-- Bars dengan tinggi berbeda -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="bottom"
                        android:layout_marginTop="8dp">

                        <!-- Bar 1 (Sen) - 5k -->
                        <View android:layout_width="0dp" android:layout_height="70dp" android:layout_weight="1"
                            android:background="#2C2CD7" android:layout_marginHorizontal="3dp"
                            android:layout_marginBottom="20dp"/>

                        <!-- Bar 2 (Sel) - 2.5k -->
                        <View android:layout_width="0dp" android:layout_height="35dp" android:layout_weight="1"
                            android:background="#2C2CD7" android:layout_marginHorizontal="3dp"
                            android:layout_marginBottom="20dp"/>

                        <!-- Bar 3 (Rab) - 0k -->
                        <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"
                            android:background="#2C2CD7" android:layout_marginHorizontal="3dp"
                            android:layout_marginBottom="20dp"/>

                        <!-- Bar 4 (Kam) - -2.5k -->
                        <View android:layout_width="0dp" android:layout_height="35dp" android:layout_weight="1"
                            android:background="#C52828" android:layout_marginHorizontal="3dp"
                            android:layout_marginBottom="20dp"/>

                        <!-- Bar 5 (Jum) - -5k -->
                        <View android:layout_width="0dp" android:layout_height="70dp" android:layout_weight="1"
                            android:background="#C52828" android:layout_marginHorizontal="3dp"
                            android:layout_marginBottom="20dp"/>

                        <!-- Bar 6 (Sab) - 2.5k -->
                        <View android:layout_width="0dp" android:layout_height="35dp" android:layout_weight="1"
                            android:background="#2C2CD7" android:layout_marginHorizontal="3dp"
                            android:layout_marginBottom="20dp"/>

                        <!-- Bar 7 (Min) - 0k -->
                        <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"
                            android:background="#2C2CD7" android:layout_marginHorizontal="3dp"
                            android:layout_marginBottom="20dp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- LABEL HARI -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:paddingStart="36dp">

                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                    android:text="Sen" android:textSize="11sp" android:gravity="center" android:textColor="#666666"/>
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                    android:text="Sel" android:textSize="11sp" android:gravity="center" android:textColor="#666666"/>
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                    android:text="Rab" android:textSize="11sp" android:gravity="center" android:textColor="#666666"/>
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                    android:text="Kam" android:textSize="11sp" android:gravity="center" android:textColor="#666666"/>
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                    android:text="Jum" android:textSize="11sp" android:gravity="center" android:textColor="#666666"/>
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                    android:text="Sab" android:textSize="11sp" android:gravity="center" android:textColor="#666666"/>
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                    android:text="Min" android:textSize="11sp" android:gravity="center" android:textColor="#666666"/>
            </LinearLayout>
        </LinearLayout>

        <!-- TRANSAKSI TERAKHIR -->
        <LinearLayout
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:elevation="4dp"
            android:layout_marginBottom="30dp">

            <!-- HEADER: Judul + Lihat Semua -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Transaksi Terakhir"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/textLihatSemua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Semua"
                    android:textSize="14sp"
                    android:textColor="#2C2CD7" />

            </LinearLayout>

            <!-- TRANSAKSI 1: Beli Nasi Padang -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="16dp"
                android:layout_marginTop="16dp">

                <!-- ICON LINGKARAN MERAH -->
                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/decrease"
                    android:background="@drawable/icon_circle_red"
                    android:padding="10dp"
                    app:tint="#FFFFFF" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beli Nasi Padang"
                        android:textSize="15sp"
                        android:textColor="#333333" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengeluaran"
                        android:textSize="13sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- Rp 20.000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#C52828" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13 NOV 12.30"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- TRANSAKSI 2: Bayar Gojek -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="16dp"
                android:layout_marginTop="8dp">

                <!-- ICON LINGKARAN MERAH -->
                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/decrease"
                    android:background="@drawable/icon_circle_red"
                    android:padding="10dp"
                    app:tint="#FFFFFF" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bayar Gojek"
                        android:textSize="15sp"
                        android:textColor="#333333" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengeluaran"
                        android:textSize="13sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- Rp 25.000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#C52828" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13 NOV 10.30"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- TRANSAKSI 3: Beli Pulsa -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="16dp"
                android:layout_marginTop="8dp">

                <!-- ICON LINGKARAN MERAH -->
                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/decrease"
                    android:background="@drawable/icon_circle_red"
                    android:padding="10dp"
                    app:tint="#FFFFFF" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beli Pulsa"
                        android:textSize="15sp"
                        android:textColor="#333333" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengeluaran"
                        android:textSize="13sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- Rp 20.000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#C52828" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13 NOV 08.00"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- TRANSAKSI 4: Tabungan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <!-- ICON LINGKARAN BIRU -->
                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/increase"
                    android:background="@drawable/icon_circle_blue"
                    android:padding="10dp"
                    app:tint="#FFFFFF" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tabungan"
                        android:textSize="15sp"
                        android:textColor="#333333" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pemasukan"
                        android:textSize="13sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ Rp 100.000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#2C2CD7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13 NOV 07.00"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>