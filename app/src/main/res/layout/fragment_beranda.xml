<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="0dp"
    android:clipToPadding="false">

    <!-- Container utama untuk seluruh konten -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- SECTION 1: HEADER DENGAN BACKGROUND BIRU -->
        <!-- Latar belakang biru dengan sudut melengkung di bagian bawah -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_blue_rounded"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <!-- Bagian sambutan dan tanggal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp">

                <!-- Teks sambutan untuk pengguna -->
                <TextView
                    android:id="@+id/textWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selamat Datang Aidilia"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Teks bulan dan tahun saat ini -->
                <TextView
                    android:id="@+id/textDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="November 2025"
                    android:textColor="#E3F2FD"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Card untuk menampilkan saldo utama -->
            <LinearLayout
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/card_background"
                android:elevation="10dp"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Baris judul saldo dan icon toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Label "Saldo Utama" -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Saldo Utama"
                        android:textColor="#666666"
                        android:textSize="16sp" />

                    <!-- Icon mata untuk toggle show/hide saldo -->
                    <ImageView
                        android:id="@+id/iconMata"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_view"
                        app:tint="#666666" />

                </LinearLayout>

                <!-- Teks saldo utama (bisa di-toggle show/hide) -->
                <TextView
                    android:id="@+id/textSaldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Rp 45.000"
                    android:textColor="#333333"
                    android:textSize="32sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Container untuk card pemasukan dan pengeluaran -->
            <LinearLayout
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp">

                <!-- Card pemasukan dengan background biru -->
                <LinearLayout
                    android:id="@+id/cardPemasukan"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_pemasukan"
                    android:padding="16dp"
                    android:elevation="6dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center_vertical">

                    <!-- Baris icon dan teks label -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Icon panah naik untuk pemasukan -->
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/increase"
                            app:tint="#FFFFFF" />

                        <!-- Label "Pemasukan" -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pemasukan"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:layout_marginStart="6dp" />

                    </LinearLayout>

                    <!-- Teks jumlah pemasukan -->
                    <TextView
                        android:id="@+id/textPemasukan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 100.000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="12dp" />

                </LinearLayout>

                <!-- Card pengeluaran dengan background merah -->
                <LinearLayout
                    android:id="@+id/cardPengeluaran"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_pengeluaran"
                    android:padding="16dp"
                    android:elevation="6dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical">

                    <!-- Baris icon dan teks label -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Icon panah turun untuk pengeluaran -->
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/decrease"
                            app:tint="#FFFFFF" />

                        <!-- Label "Pengeluaran" -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pengeluaran"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:layout_marginStart="6dp" />

                    </LinearLayout>

                    <!-- Teks jumlah pengeluaran -->
                    <TextView
                        android:id="@+id/textPengeluaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 65.000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="12dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- SECTION 2: PROMO BANNER -->
        <!-- Banner promosi dengan sudut melengkung -->
        <ImageView
            android:id="@+id/imagePromoBanner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/bg_promo_banner"
            android:background="@drawable/bg_rounded_corners"
            android:scaleType="centerCrop"
            android:layout_margin="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:clipToOutline="true"
            android:contentDescription="Banner promo aplikasi MoneyFlow" />

        <!-- SECTION 3: TRANSAKSI TERAKHIR -->
        <!-- Card untuk menampilkan daftar transaksi terbaru -->
        <LinearLayout
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:elevation="4dp"
            android:layout_marginBottom="30dp">

            <!-- Header dengan judul dan tombol navigasi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Judul "Transaksi Terakhir" -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Transaksi Terakhir"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <!-- Tombol navigasi ke halaman riwayat lengkap -->
                <TextView
                    android:id="@+id/textLihatSemua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Semua"
                    android:textSize="14sp"
                    android:textColor="#2C2CD7" />

            </LinearLayout>

            <!-- RecyclerView untuk menampilkan 4 transaksi terbaru -->
            <!-- Data diisi secara dinamis dari TransactionManager -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewTransaksiTerakhir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                android:clipToPadding="false"
                tools:listitem="@layout/item_transaction_beranda" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>