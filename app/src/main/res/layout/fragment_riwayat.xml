<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_riwayat"
    tools:context=".home.RiwayatFragment">

    <!-- Header: Riwayat Transaksi (Tengah Atas) -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Riwayat Transaksi"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Container untuk 2 filter dalam satu baris -->
    <LinearLayout
        android:id="@+id/layoutFilters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_vertical">

        <!-- FILTER TANGGAL (Kiri) -->
        <LinearLayout
            android:id="@+id/layoutTanggal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_spinner"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="8dp">

            <!-- Ikon kalender -->
            <ImageView
                android:id="@+id/ivIconTanggal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_calendar"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                />

            <!-- TEXTVIEW TANGGAL BARU (MENGGANTIKAN SPINNER) -->
            <TextView
                android:id="@+id/textViewTanggal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:text="Pilih tanggal"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Ikon arrow dropdown -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dropdown"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="12dp"
                />

        </LinearLayout>

        <!-- FILTER JENIS (Kanan) -->
        <LinearLayout
            android:id="@+id/layoutJenis"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_spinner"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp">

            <!-- Ikon jenis (pemasukan/pengeluaran) -->
            <ImageView
                android:id="@+id/ivIconJenis"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/decrease"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                />

            <!-- TEXTVIEW JENIS BARU (MENGGANTIKAN SPINNER) -->
            <TextView
                android:id="@+id/textViewJenis"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:text="Semua"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Ikon arrow dropdown -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dropdown"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="12dp"
                />

        </LinearLayout>

    </LinearLayout>

    <!-- RecyclerView untuk daftar transaksi -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewRiwayat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutFilters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/card_rounded"
        />
    <!-- Styling item (background, elevation, padding) harus ada di item_transaction.xml, BUKAN DI SINI -->


</androidx.constraintlayout.widget.ConstraintLayout>