<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="12dp"
    android:paddingHorizontal="16dp"
    android:background="@drawable/card_rounded"
    android:clickable="true"
    android:focusable="true"
    android:elevation="4dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:outlineProvider="background"
    android:clipToOutline="true">

    <!-- ICON LINGKARAN -->
    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/decrease"
        android:background="@drawable/icon_circle_red"
        android:padding="8dp"
        app:tint="#FFFFFF"
        tools:src="@drawable/decrease" />

    <!-- KETERANGAN TRANSAKSI (Kiri) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beli Nasi Padang"
            android:textSize="14sp"
            android:textColor="#333333"
            tools:text="Beli Nasi Padang" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengeluaran"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp"
            tools:text="Pengeluaran" />
    </LinearLayout>

    <!-- JUMLAH & TANGGAL (Kanan) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Rp 20.000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#C52828"
            tools:text="- Rp 20.000" />

        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13 NOV 12.30"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp"
            tools:text="13 NOV 12.30" />
    </LinearLayout>
</LinearLayout>