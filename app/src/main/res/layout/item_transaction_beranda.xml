<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="16dp"
    android:paddingHorizontal="0dp"
    android:background="#FFFFFF">

    <!-- ICON LINGKARAN: Menunjukkan jenis transaksi secara visual -->
    <!-- Background lingkaran berwarna (biru/merah) dengan icon di tengah -->
    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/decrease"
        android:background="@drawable/icon_circle_red"
        android:padding="10dp"
        app:tint="#FFFFFF"
        tools:src="@drawable/decrease" />

    <!-- INFO TRANSAKSI: Menampilkan detail transaksi -->
    <!-- Menggunakan layout_weight agar mengisi sisa space -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:gravity="center_vertical">

        <!-- NAMA KATEGORI TRANSAKSI -->
        <!-- Contoh: "Beli Nasi Padang", "Gaji Bulanan", "Bayar Listrik" -->
        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beli Nasi Padang"
            android:textSize="15sp"
            android:textColor="#333333"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Beli Nasi Padang" />

        <!-- JENIS TRANSAKSI: "Pemasukan" atau "Pengeluaran" -->
        <!-- Teks lebih kecil dengan warna abu-abu untuk secondary information -->
        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengeluaran"
            android:textSize="13sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"
            tools:text="Pengeluaran" />
    </LinearLayout>

    <!-- NOMINAL TRANSAKSI: Jumlah uang dengan format Rupiah -->
    <!-- Ditempatkan di sebelah kanan, vertikal center alignment -->
    <!-- Warna dan tanda (+/-) disesuaikan di BerandaAdapter.kt -->
    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Rp 20.000"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#C52828"
        android:layout_gravity="center_vertical"
        android:paddingEnd="8dp"
        tools:text="- Rp 20.000" />

</LinearLayout>